{
  "name": "dns-mcp-server",
  "version": "0.0.1",
  "description": "Comprehensive DNS MCP Server - Expert knowledge for BIND, NSD, Unbound, DJBDNS, PowerDNS, registrars, and DNS debugging",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "dns-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "postrelease": "git push --follow-tags origin main && gh release create v$(node -p \"require('./package.json').version\") --title v$(node -p \"require('./package.json').version\") --generate-notes"
  },
  "keywords": [
    "mcp",
    "dns",
    "bind",
    "nsd",
    "unbound",
    "powerdns",
    "djbdns",
    "dig",
    "drill",
    "ldns",
    "registrar",
    "opensrs",
    "godaddy"
  ],
  "author": "DNS Science",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "dns2": "^2.1.0",
    "native-dns-packet": "^0.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.3.0"
  }
}
